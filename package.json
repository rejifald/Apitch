{
  "name": "stitchapi",
  "version": "0.3.3",
  "description": "StitchAPI is a tool designed to seamlessly integrate (“stitch”) any JSON-based API into your project, simplifying the process of connecting and working with various APIs.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "check:types": "tsc --noEmit",
    "check:format": "prettier --check .",
    "check:lint": "eslint . --flag unstable_ts_config",
    "build": "tsc",
    "lint": "eslint . --flag unstable_ts_config",
    "format": "jiti ./node_modules/.bin/prettier --write .",
    "dev": "tsc -w",
    "prepare": "husky",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rejifald/Stitchapi.git"
  },
  "keywords": [
    "stitch",
    "stitchapi",
    "oas",
    "openapi",
    "streamline",
    "integrate",
    "integration",
    "validation",
    "validate",
    "json",
    "zod",
    "url-template",
    "axios",
    "fetch",
    "qs",
    "querystring",
    "client",
    "api",
    "rest",
    "restful",
    "API integration",
    "HTTP client",
    "API client",
    "JSON API",
    "request validation",
    "response validation",
    "query parameter validation",
    "path parameter validation",
    "real-time validation",
    "dynamic URL",
    "template-based URL",
    "REST API",
    "adapter"
  ],
  "author": "Oleksandr Zhuravlov (rejifald@gmail.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/rejifald/StitchAPI/issues"
  },
  "homepage": "https://github.com/rejifald/StitchAPI#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-typescript": "^7.24.7",
    "@jest/globals": "^29.7.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.7",
    "@types/qs": "^6.9.15",
    "@types/url-template": "^2.0.31",
    "axios-mock-adapter": "^2.0.0",
    "eslint": "^9.9.0",
    "eslint-plugin-lodash": "^8.0.0",
    "husky": "^9.1.5",
    "jest": "^29.7.0",
    "jiti": "^1.21.6",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "type-fest": "^4.25.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "typescript-eslint-parser": "^22.0.0"
  },
  "peerDependencies": {
    "axios": "^1.7.4"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "qs": "^6.13.0",
    "ufo": "^1.5.4",
    "url-template": "^3.1.1",
    "zod": "^3.23.8",
    "zod-validation-error": "^3.3.1"
  }
}
